generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

// ================================
// ENUMS
// ================================
enum Unit {
  KG
  LITER
  UNIT
}

enum PurchaseStatus {
  DRAFT
  CONFIRMED
  CANCELLED
}

// ================================
// MODELOS
// ================================

model Supplier {
  id      Int     @id @default(autoincrement())
  name    String
  cuit    String? // opcional si no siempre tenés CUIT
  phone   String?
  email   String?
  address String?
  notes   String?
  active  Boolean @default(true)

  purchases Purchase[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  unit        Unit
  weight      Decimal   @db.Decimal(10, 3) @default(0)          // cantidad de kilos (o unidades)
  price       Decimal   @db.Decimal(14, 2) @default(0) // precio de venta actual

  purchaseItems PurchaseItem[]
  orderItems    OrderItem[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  priceHistory PriceHistory[] // relación con tabla de historial
}

model PriceHistory {
  id         Int      @id @default(autoincrement())
  product    Product  @relation(fields: [productId], references: [id])
  productId  Int

  price      Decimal  @db.Decimal(14, 2)  // precio registrado en ese momento
  changedAt  DateTime @default(now())     // fecha/hora de registro del precio
}

model Purchase {
  id           Int          @id @default(autoincrement())
  supplier     Supplier        @relation(fields: [supplierId], references: [id])
  supplierId   Int
  status       PurchaseStatus  @default(DRAFT)
  invoice      String?
  date         DateTime        @default(now())

  items PurchaseItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PurchaseItem {
  id         Int    @id @default(autoincrement())
  purchase   Purchase  @relation(fields: [purchaseId], references: [id])
  purchaseId Int
  product    Product   @relation(fields: [productId], references: [id])
  productId  Int

  quantity   Decimal   @db.Decimal(10, 3)
  unitPrice  Decimal   @db.Decimal(14, 4)
  lineTotal  Decimal   @db.Decimal(18, 4) // = quantity × unitPrice

  createdAt  DateTime  @default(now())
}

model Client {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?   @unique
  phone     String?
  address   String?
  notes     String?
  orders    Order[]    // ← relación con órdenes

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // orders Order[]
}

model Seller {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String?   @unique
  phone     String?
  notes     String?
  orders    Order[]    // ← relación con órdenes

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Si querés registrar ventas asociadas a este vendedor:
  // sales Sale[]
}

model Order {
  id         Int            @id @default(autoincrement())
  client     Client         @relation(fields: [clientId], references: [id])
  clientId   Int
  seller     Seller         @relation(fields: [sellerId], references: [id])
  sellerId   Int

  date       DateTime       @default(now())

  status     OrderStatus    @default(DRAFT)
  paymentStatus PaymentStatus @default(UNPAID)

  items      OrderItem[]

  total      Decimal        @db.Decimal(18, 2) @default(0)

  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
}


model OrderItem {
  id        Int      @id @default(autoincrement())
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   Int

  product   Product  @relation(fields: [productId], references: [id])
  productId Int

  quantity  Decimal  @db.Decimal(10, 3)
  unitPrice Decimal  @db.Decimal(14, 2)
  lineTotal Decimal  @db.Decimal(18, 2) // cantidad × precio unitario

  createdAt DateTime @default(now())
}

enum OrderStatus {
  DRAFT
  PROCESSING
  PACKED
  SHIPPED
  COMPLETED
  CANCELED
}
enum PaymentStatus {
  UNPAID
  PENDING
  PARTIALLY_PAID
  PAID
  REFUNDED
}